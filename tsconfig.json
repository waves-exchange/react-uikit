{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "jest/**/*.ts",
    "jest/**/*.tsx"
  ],
  "exclude": [
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "test-utils": ["./jest/test-utils.tsx"]
    }
  }
}
